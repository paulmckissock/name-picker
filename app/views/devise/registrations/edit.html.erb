<div class="flex items-center justify-center h-[calc(100vh-07rem)]">
  <div class="p-10 gap-8 w-5/12">
    <!-- User form -->
    <h3 class="py-6">Edit Your Account Details</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        New <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="flex justify-between items-center py-6">
        <%= button_to "Delete account", registration_path(resource_name), class: "btn-text", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
        <%= f.submit "Save", class: "btn-primary actions" %>
      </div>
    <% end %>
  </div>
</div>

