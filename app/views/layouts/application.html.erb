<!DOCTYPE html>
<html>
  <head>
    <title>Spinet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
  </head>

  <body class="">
    <!-- alert banner -->
    <% if notice %>
      <p id="alert-banner" class="alert alert-success fixed top-0 left-0 w-full z-50 p-4"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p id="alert-banner" class="alert alert-danger fixed top-0 left-0 w-full z-50 p-4"><%= alert %></p>
    <% end %>

    <!-- nav bar -->
    <% unless current_page?(new_user_registration_path) %>
      <div class="flex justify-between p-4 h-28">
        <div class="px-4">
          <img src="/images/logo.png" alt="The Spinet logo" class="max-w-40">
        </div>
        <div class="flex gap-4">
          <% if user_signed_in? %>
            <!-- Logged in as <strong><%= current_user.email %></strong>.-->
            <%= link_to "Profile", edit_user_registration_path, class: "btn-secondary"%>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn-secondary" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <%= yield %>

    <!-- alert banner script-->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const alertBanner = document.getElementById('alert-banner');
        if (alertBanner) {
          setTimeout(function() {
            alertBanner.style.transition = "opacity 1s ease";
            alertBanner.style.opacity = 0;
            setTimeout(() => alertBanner.remove(), 1000);
          }, 2000);
        }
      });
    </script>

  </body>
</html>
